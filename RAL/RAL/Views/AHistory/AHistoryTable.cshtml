@Scripts.Render("~/js-AHistory")

<script type="text/javascript">
    $(function () {
        setAHsitoryTable();
        setAHistorySortBindings();
    });
</script>

<div class="table-div col-md-10">
    <div id="notif-area"></div>
    <table class="table table-striped table-hover round-corners" id="ahistory-table">
        <thead>
            <tr>
                <th>№</th>
                <th>
                    <a class="tooltip1" href="#">
                        Name<span>Sort by Name</span>
                    </a>
                </th>
                <th>
                    <a class="tooltip1" href="#">
                        Type<span>Sort by Type</span>
                    </a>
                </th>
                <th>
                    <a class="tooltip1" href="#">
                        Year<span>Sort by Year</span>
                    </a>
                </th>
                <th>
                    <a class="tooltip1" href="#">
                        Episodes<span>Sort by Epcount</span>
                    </a>
                </th>
                <th>
                    <a class="tooltip1" href="#">
                        Started<span>Sort by Started Date</span>
                    </a>
                </th>
                <th>
                    <a class="tooltip1" href="#">
                        Finished<span>Sort by Finished Date</span>
                    </a>
                </th>
                <th>
                    <a class="tooltip1" href="#">
                        Rating<span>Sort by Rating</span>
                    </a>
                </th>
                <th>
                    <a class="tooltip1" href="#">
                        Status<span>Sort by Status</span>
                    </a>
                </th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody id="AHistoryBody">
            @Html.Action("AHistoryList")
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5"></td>
                <td colspan="5">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-11">
                            <div class="well well-sm row">
                                <div class="col-md-4"><b>Total Movies: </b><span class="badge"></span></div>
                                <div class="col-md-4"><b>Total TV/OVA: </b><span class="badge"></span></div>
                                <div class="col-md-4"><b>Total TV/OVA Episodes: </b><span class="badge"></span></div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>