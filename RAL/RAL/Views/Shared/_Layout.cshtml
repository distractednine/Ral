<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RAL</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/js")
    @Scripts.Render("~/js1")
</head>
<script type="text/javascript">
    $(document).ready(function() {
        setMainNavbar();
    })
</script>
<body>
    <div class="navbar navbar-default row">
        <div class="col-lg-1"></div>
        <div class="col-lg-3">
            <a href="@Url.Action("Start","AHistory")" class="brand"><img src="~/Content/images/logo.png" class="logo"></a>
        </div>
        <div class="col-lg-8">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Start","AHistory")">Watch History</a></li>
                <li><a href="#">Rating</a></li>
                <li><a href="@Url.Action("Index","Plans")">Plans</a></li>
                <li><a href="@Url.Action("LogOn","Account")"">Watch Time</a></li>       
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown"><b id="username"></b><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#dropdown1" >Profile</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("LogOut","Account")">Log out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-5 row">
            <ul class="nav navbar-nav" id="secondary-buttons">
                <li id="addLi"><a data-toggle="modal">Add</a></li>
                <li><a href="#">Sort</a></li>
                <li><a href="#">Filters</a></li>
                <li><a href="#">Get Report</a></li>       
            </ul>
        </div>
    </div>

    <div>
        @RenderBody()
        <hr />
        <br />
        <div class="text-center">
            <p>&copy; 2014 - RAL - distractednine</p>
        </div>
    </div>
</body>
</html>